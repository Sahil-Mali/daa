def fractional_knapsack():
    weights = [10, 20, 30]
    values = [60, 100, 120]
    capacity = 50
    res = 0

    # Pair : [Weight, Value], sorted by value/weight ratio (descending)
    for pair in sorted(zip(weights, values), key=lambda x: x[1] / x[0], reverse=True):
        if capacity <= 0:  # Capacity completed - Bag fully filled
            break
        if pair[0] > capacity:  # Current weight exceeds available capacity
            res += int(capacity * (pair[1] / pair[0]))  # Take fraction of the item
            capacity = 0
        else:  # Take the whole object
            res += pair[1]
            capacity -= pair[0]

    print("Maximum value in Knapsack =", res)


if __name__ == "__main__":
    fractional_knapsack()
